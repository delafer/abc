{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    //"module": "es6",
    "target": "es5",
    "removeComments": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
//    "experimentalAsyncFunctions": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude":[
    "dist",
    "node_modules"
  ]

}
